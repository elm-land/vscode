{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "lib": [
      "ES2019"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "server/src/**/*.ts",
    "client/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    }
  ]
}