{
  "name": "elm-land",
  "displayName": "Elm Land",
  "description": "A minimal plugin for Elm",
  "version": "0.0.2",
  "icon": "src/icon.png",
  "publisher": "elm-land",
  "repository": "https://github.com/elm-land/vscode",
  "engines": {
    "vscode": "^1.72.2"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/elm.json",
    "onLanguage:elm"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[elm]": {
        "editor.tabSize": 4,
        "editor.formatOnSave": true,
        "editor.folding": false,
        "editor.wordBasedSuggestions": false,
        "editor.semanticHighlighting.enabled": true
      }
    },
    "configuration":[
      {
        "type": "object",
        "title": "Elm Land",
        "properties": {
          "elmLand.entrypointFilepaths": {
            "description": "The filepath to your project's Main module, relative to the elm.json file.",
            "type": "array",
            "default": ["src/Main.elm", ".elm-land/src/Main.elm"],
            "scope": "resource"
          }
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "elmLand.packageDocs",
        "displayName": "Elm Package Docs",
        "selector": [
          {
            "filenamePattern": "**/packages/*/*/*/docs.json"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "elm",
        "aliases": [
          "Elm",
          "elm"
        ],
        "extensions": [
          ".elm"
        ],
        "configuration": "./src/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "elm",
        "scopeName": "source.elm",
        "path": "./src/syntax.json"
      }
    ]
  },
  "capabilities": {
    "referencesProvider" : "true"
  },
  "dependencies": {
    "elm": "0.19.1-5",
    "elm-format": "0.8.5",
    "elmi-to-json": "1.4.3"
  }
}
